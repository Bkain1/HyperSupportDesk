<!DOCTYPE html>
<html lang="en">

<head>
    <title>HSD - Dashboard</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
</head>


<body>
    <div id="wrapper">

        <header>
            <img src="images/HSDLogo.png" alt="HyperSupportDesk Logo" align="left">
        </header>

        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/quickFixes">QuickFixes</a></li>
            </ul>
        </nav>

        <main id="hero">
            <h2>HyperSupportDesk - Dashboard</h2><br>

            <p>You can now create a ticket.</p>

            <!-- Add Ticket UI Here -->
            <form action="/dashboard" method="POST">
                <div>
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div>
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div>
                    <label for="author">Author</label>
                    <input type="text" id="author" name="author" required>
                </div>
                <div>
                    <label for="priority">Priority</label>
                    <select name="priority" id="priority">
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                    </select>
                </div>
                <div>
                    <label for="status">Status (don't change)</label>
                    <select name="status" id="status">
                        <option value="Waiting">Waiting</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
                <button type="submit">Create Ticket</button>
            </form>



        <p id="output"></p><br><br><br>
        <p>View Tickets</p>
        <div class="center">
        <table style="width:auto" id="ticket">
            <tr>
                <td>ID</td>
                <td>TITLE</td>
                <td>DESCRIPTION</td>
                <td>AUTHOR</td>
                <td>PRIORITY</td>
                <td>STATUS</td>
            </tr>
        <% tickets.forEach(function(t) { %>
            <tr>
                <td><%= t.id %></td>
                <td><%= t.title %></td>
                <td><%= t.description %></td>
                <td><%= t.author %></td>
                <td><%= t.priority %></td>
                <td><%= t.status %></td>
            </tr>
        <% }); %>
        </table>
    </div>


        </main>

